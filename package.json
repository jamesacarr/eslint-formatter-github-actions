{
  "name": "@jamesacarr/eslint-formatter-github-actions",
  "version": "0.1.0",
  "description": "Reporter for Jest that outputs GitHub Actions annotations",
  "author": "James Carr <james@jamescarr.dev>",
  "homepage": "https://github.com/jamesacarr/eslint-formatter-github-actions#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesacarr/eslint-formatter-github-actions.git"
  },
  "bugs": {
    "url": "https://github.com/jamesacarr/eslint-formatter-github-actions/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "keywords": [
    "eslint",
    "eslint-formatter",
    "eslintformatter"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "xo --fix",
    "lint:ci": "xo",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable && yarn build",
    "postpublish": "pinst --enable",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "env": [
      "es6",
      "jest",
      "node"
    ],
    "rules": {
      "@typescript-eslint/prefer-readonly-parameter-types": 0
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/eslint": "^8.21.1",
    "@types/node": "^18.14.1",
    "eslint": "^7.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "pinst": "^3.0.0",
    "typescript": "^4.9.5",
    "xo": "^0.37.1"
  }
}
